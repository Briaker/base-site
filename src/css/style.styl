.owl-carousel, .owl-carousel-fullscreen
  img
    cursor pointer
    &:focus
      outline 0

.owl-carousel-fullscreen
  z-index 998
  position fixed
  right 0
  top 0

.carousel-fullscreen-wrapper
  display flex
  flex-direction column
  justify-content center
  z-index 997
  position fixed
  left 0
  top 0
  margin 0
  padding 1em
  height 100%
  width 100%
  text-align center
  background rgba(0,0,0,0.75)
  .close-button
    z-index 999
    position fixed
    right 1.15em
    top 1em
    @media $desktop
      top 1.45em
    width 40px
    height 40px
    border 4px solid rgba(0,0,0,1)
    border-radius 8px
    background rgba(0,0,0,1) url(../img/cross.png) no-repeat center center
    cursor pointer
    opacity 0.75

.carousel-fullscreen-scale
  opacity 0
  visibility hidden
  transform scale(0.9)
  transition transform 0.2s, opacity 0.2s, visibility 0s 0.2s
  &.open
    opacity 1
    visibility visible
    transform scale(1)
    transition transform 0.4s, opacity 0.4s

